<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/xian"
        android:contentDescription="@string/contentdescription"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <!--订单编号、订单状态-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号："
                android:textColor="@color/shenhui"
                android:textSize="14sp"/>

            <TextView
                android:id="@id/textview_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textview"
                android:layout_marginLeft="5dp"
                android:text="000000000000"
                android:textColor="@color/shenhui"
                android:textSize="15sp"/>

            <TextView
                android:id="@id/textview_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="订单状态"
                android:textColor="@color/blue"
                android:textSize="16sp"/>

        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:src="@color/xian"
            android:contentDescription="@string/contentdescription"/>

        <!--订单中的商品信息-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:background="#f8f8f8">

            <ImageView
                android:id="@id/imageview"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/hotel_defult_img"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="13dp"
                android:scaleType="centerCrop"
                android:contentDescription="@string/contentdescription"/>

            <TextView
                android:id="@id/textview_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageview"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="商品名称"
                android:textColor="@color/shenhui"
                android:textSize="15sp"/>

            <TextView
                android:id="@id/textview_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageview"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_below="@id/textview_2"
                android:text="商品规格"
                android:textColor="#a0a0a0"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:layout_toRightOf="@id/imageview"
                android:layout_below="@id/textview_3">

                <TextView
                    android:id="@id/textview_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="兑换金积分"
                    android:textColor="#f10215"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@id/textview_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="256"
                    android:textColor="#f10215"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@id/textview_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:paddingBottom="5dp"
                    android:text="积分"
                    android:textColor="#f10215"
                    android:textSize="14sp"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/xian"
        android:contentDescription="@string/contentdescription"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:src="#e9eceb"
        android:contentDescription="@string/contentdescription"/>

</LinearLayout>
