<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/xian"
        android:contentDescription="@string/contentdescription"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <!--订单编号、订单状态-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="15dp">

            <TextView
                android:id="@id/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号："
                android:textColor="@color/shenhui"
                android:textSize="14sp"/>

            <TextView
                android:id="@id/textview_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textview"
                android:layout_marginLeft="5dp"
                android:text="000000000000"
                android:textColor="@color/shenhui"
                android:textSize="15sp"/>

            <TextView
                android:id="@id/textview_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="订单状态"
                android:textColor="@color/blue"
                android:textSize="16sp"/>

        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:src="@color/xian"
            android:contentDescription="@string/contentdescription"/>

        <!--订单中的商品信息-->
        <LinearLayout
            android:id="@id/linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"/>

        <!--商品的总数量和总价格-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="#f6f7f7">

            <TextView
                android:id="@id/textview_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/textview_3"
                android:text="共0份"
                android:textColor="@color/shenhui"
                android:textSize="16sp"/>

            <TextView
                android:id="@id/textview_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/textview_2"
                android:layout_marginRight="5dp"
                android:text="合计："
                android:textColor="@color/shenhui"
                android:textSize="16sp"/>

            <TextView
                android:id="@id/textview_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="0积分"
                android:textColor="@color/shenhui"
                android:textSize="16sp"/>
        </RelativeLayout>

        <ImageView
            android:visibility="gone"
            android:id="@id/imageview"
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:src="@color/xian"
            android:contentDescription="@string/contentdescription"/>

        <LinearLayout
            android:id="@id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@id/textview_5"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_order_hui"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                android:text="取消订单"
                android:textColor="@color/shenhui"
                android:textSize="15sp"/>

            <TextView
                android:id="@id/textview_6"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_order_hong"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                android:text="去支付"
                android:textColor="#f32232"
                android:textSize="15sp"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:src="@color/xian"
        android:contentDescription="@string/contentdescription"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:src="#e9eceb"
        android:contentDescription="@string/contentdescription"/>

</LinearLayout>
