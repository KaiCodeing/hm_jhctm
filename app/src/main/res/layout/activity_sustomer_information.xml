<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAECEB"
    android:orientation="vertical">

    <include layout="@layout/title_right_text"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/title_backgroid"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原因:" />

        <TextView
            android:id="@+id/customer_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="售后原因"
            android:textColor="#2E2E2E"
            android:textSize="@dimen/textsize_7" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#262626"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/customer_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退款积分: 562"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_7" />

        <TextView
            android:id="@+id/customer_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="提交时间: 2012/12/10 15:20"
            android:textColor="#7B7B7B"
            android:textSize="@dimen/textsize_7" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/title_backgroid"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商家反馈:" />

            <TextView
                android:id="@+id/feedbank_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="商家反馈的信息"
                android:textColor="#2E2E2E"
                android:textSize="@dimen/textsize_7" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/title_backgroid"></View>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/item_hoetl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/commod_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/hotel_defult_img"
            android:padding="1dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hotel_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="商品名称"
                android:textColor="#2F2F2F"
                android:textSize="@dimen/textsize_7" />

            <TextView
                android:id="@+id/hotel_money"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="规格:500ml*2瓶；数量：1"
                android:textColor="#A0A0A0"
                android:textSize="@dimen/textsize_7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="265"
                    android:textColor="@color/title_backgroid"
                    android:textSize="@dimen/textsize_8" />

                <TextView
                    android:id="@+id/jifen_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textColor="@color/title_backgroid"
                    android:textSize="@dimen/textsize_6" />

                <TextView
                    android:id="@+id/add_bz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="+"
                    android:textColor="@color/title_backgroid"
                    android:textSize="@dimen/textsize_8" />

                <TextView
                    android:id="@+id/fenxiang_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享500"
                    android:textColor="@color/title_backgroid"
                    android:textSize="@dimen/textsize_7" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"></View>

    <TextView
        android:id="@+id/guige_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F6F7F7"
        android:gravity="center|right"
        android:padding="15dp"
        android:text="共1个商品，合计：200积分+分享20"
        android:textColor="#2F2F2F"
        android:textSize="@dimen/textsize_7" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="商品总计"
                android:textSize="@dimen/textsize_8" />

            <TextView
                android:id="@+id/price_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500积分"
                android:textSize="@dimen/textsize_7" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="运费"
                android:textSize="@dimen/textsize_8" />

            <TextView
                android:id="@+id/price_freight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0积分"
                android:textSize="@dimen/textsize_7" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:text="实付(含运费)"
                android:textSize="@dimen/textsize_8" />

            <TextView
                android:id="@+id/price_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500积分"
                android:textSize="@dimen/textsize_7" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>