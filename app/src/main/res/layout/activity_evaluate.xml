<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9ECEB"
    android:orientation="vertical">

    <include layout="@layout/title_right_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/title_backgroid"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="#f8f8f8">

        <ImageView
            android:id="@id/imageview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/hotel_defult_img"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="13dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/contentdescription"/>

        <TextView
            android:id="@id/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageview"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="商品名称"
            android:textColor="@color/shenhui"
            android:textSize="15sp"/>

        <TextView
            android:id="@id/textview_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageview"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/textview"
            android:text="商品规格"
            android:textColor="#a0a0a0"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:layout_toRightOf="@id/imageview"
            android:layout_below="@id/textview_0">

            <TextView
                android:id="@id/textview_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换金积分"
                android:textColor="#f10215"
                android:textSize="14sp"/>

            <TextView
                android:id="@id/textview_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text="256"
                android:textColor="#f10215"
                android:textSize="18sp"/>

            <TextView
                android:id="@id/textview_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text="积分"
                android:textColor="#f10215"
                android:textSize="14sp"/>

        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:src="@color/xian"
        android:contentDescription="@string/contentdescription"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@color/white"
        android:paddingTop="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星级评价:"
            android:textSize="@dimen/textsize_7"
            android:textColor="#2E2E2E"
           />
        <ImageView
            android:id="@+id/star1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/evaluate_star_liang_img"/>
        <ImageView
            android:id="@+id/star2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/evaluate_star_liang_img"/>
        <ImageView
            android:id="@+id/star3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/evaluate_star_liang_img"/>
        <ImageView
            android:id="@+id/star4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/evaluate_star_liang_img"/>

        <ImageView
            android:id="@+id/star5"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:background="@mipmap/evaluate_star_liang_img"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:src="@color/xian"
        android:contentDescription="@string/contentdescription"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="top">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="图文评价:"

            android:textSize="@dimen/textsize_7"
            android:textColor="#2E2E2E"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
        <EditText
            android:id="@+id/content_evaluate"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/evaluate_input_text"
            android:hint="请输入您的评价内容"
            android:maxLength="100"
            android:gravity="left"
            android:padding="15dp"
            android:textSize="@dimen/textsize_7"/>
            <com.hemaapp.jhctm.view.JhctmGridView
                android:id="@+id/gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:layout_marginTop="20dp"
                android:horizontalSpacing="5dp"
                ></com.hemaapp.jhctm.view.JhctmGridView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>