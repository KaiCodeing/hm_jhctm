<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@color/white">

        <ImageView
            android:id="@id/imageview"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@mipmap/hotel_defult_img"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="13dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/contentdescription"/>

        <TextView
            android:id="@id/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageview"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="商品名称"
            android:textColor="@color/shenhui"
            android:textSize="15sp"/>

        <TextView
            android:id="@id/textview_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageview"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/textview"
            android:text="商品规格"
            android:textColor="#a0a0a0"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:layout_toRightOf="@id/imageview"
            android:layout_below="@id/textview_0">

            <TextView
                android:id="@id/textview_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="兑换金积分"
                android:textColor="#f10215"
                android:textSize="14sp"/>

            <TextView
                android:id="@id/textview_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text="256"
                android:textColor="#f10215"
                android:textSize="18sp"/>

            <TextView
                android:id="@id/textview_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:text="积分"
                android:textColor="#f10215"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@id/layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"

            android:gravity="center"
            android:paddingBottom="5dp"
            android:layout_below="@id/textview_0">

            <TextView
                android:id="@+id/apply"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_order_hong"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:gravity="center"
                android:text="申请售后"
                android:layout_marginBottom="2dp"
                android:textColor="#f10215"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/reply"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_order_hong"

                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:gravity="center"
                android:text="去评价"
                android:textColor="#f10215"
                android:textSize="13sp"/>

        </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:src="@color/xian"
        android:contentDescription="@string/contentdescription"/>
</LinearLayout>
