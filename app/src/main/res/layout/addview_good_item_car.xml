<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/item_hoetl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/commod_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@mipmap/hotel_defult_img"
            android:padding="1dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hotel_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="商品名称"
                android:textColor="#2F2F2F"
                android:textSize="@dimen/textsize_7" />

            <TextView
                android:id="@+id/hotel_money"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:singleLine="true"
                android:text="规格:500ml*2瓶；数量：1"
                android:textColor="#A0A0A0"
                android:textSize="@dimen/textsize_7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|left"
                    android:singleLine="true"
                    android:text="265"
                    android:textColor="@color/title_backgroid"
                    android:textSize="@dimen/textsize_8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="积分"
                    android:textColor="@color/title_backgroid"
                    android:textSize="@dimen/textsize_6" />

                <TextView
                    android:id="@+id/add_bz"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="+"
                    android:textColor="@color/title_backgroid"
                    android:textSize="@dimen/textsize_8" />

                <TextView
                    android:id="@+id/fenxiang_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享500"
                    android:visibility="gone"
                    android:textColor="@color/title_backgroid"
                    android:textSize="@dimen/textsize_7" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D9D9D9"></View>
</LinearLayout>