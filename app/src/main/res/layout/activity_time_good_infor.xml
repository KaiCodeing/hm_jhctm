<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_back"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/vp_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <com.hemaapp.jhctm.view.JhViewPager
                        android:id="@+id/adviewpager"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"></com.hemaapp.jhctm.view.JhViewPager>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom">

                        <RadioGroup
                            android:id="@+id/radiogroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal" />
                    </FrameLayout>
                </FrameLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"

                >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:background="@drawable/corner_good_infor"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/linearLayout">

                <TextView
                    android:id="@+id/jifen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="3000"
                    android:textColor="@color/title_backgroid"
                    android:textSize="@dimen/textsize_8"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="积分"
                    android:textColor="@color/title_backgroid"
                    android:textSize="@dimen/textsize_6" />

                <TextView
                    android:id="@+id/add_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="+"
                    android:textColor="@color/title_backgroid"
                    android:textSize="@dimen/textsize_8"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fenxiang_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分享500"
                    android:textColor="@color/title_backgroid"
                    android:textSize="@dimen/textsize_8" />
            </LinearLayout>
                <TextView
                    android:id="@+id/jffh_text"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line_bg"
                    android:padding="3dp"
                    android:text="积分不返还"
                    android:textSize="@dimen/textsize_6"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/linearLayout"
                    android:layout_toEndOf="@+id/linearLayout" />
            </RelativeLayout>
            <TextView
                android:id="@+id/good_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:gravity="center"
                android:maxLines="2"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="商品名称介绍"
                android:textColor="#2F2F2F"
                android:textSize="@dimen/textsize_8" />

            <TextView
                android:id="@+id/pinpai_bz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/title_backgroid"
                android:text="品牌商"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_7"
                android:visibility="gone" />

            <TextView
                android:id="@+id/content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:singleLine="true"
                android:text="文字描述"
                android:textColor="#A0A0A0"
                android:textSize="@dimen/textsize_6"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D9D9D9"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/infor_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已售300  好评率80%"
                    android:textColor="#A7A7A7" />

                <TextView
                    android:id="@+id/number_"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="库存100"
                    android:textColor="#A7A7A7" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#E9ECEB"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/guige_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="规格"
                        android:textColor="#2F2F2F"
                        android:textSize="@dimen/textsize_7" />

                    <TextView
                        android:id="@+id/guige_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:hint="请选择"
                        android:textSize="@dimen/textsize_6" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@mipmap/sanjiao_name" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="#E3E3E3"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="运费"
                        android:textColor="#2F2F2F"
                        android:textSize="@dimen/textsize_7" />

                    <TextView
                        android:id="@+id/yunfei_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:hint="¥10(积分)起，超出部分按X原(积分/kg)累加"
                        android:textSize="@dimen/textsize_6" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#E9ECEB"></View>

            <LinearLayout
                android:id="@+id/select_city_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="#F6F7F7"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/reply_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="评价 1250"
                    android:textColor="#272727"
                    android:textSize="@dimen/textsize_8" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"></View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="好评率"
                    android:textColor="#272727"
                    android:textSize="@dimen/textsize_7" />

                <TextView
                    android:id="@+id/city_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/sanjiao_name"
                    android:text="80%"
                    android:textColor="@color/title_backgroid"
                    android:textSize="@dimen/textsize_7" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D9D9D9"></View>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F6F7F7"
                android:padding="15dp"
                android:text="商品详情"
                android:textColor="#2F2F2F"
                android:textSize="@dimen/textsize_8" />

            <com.hemaapp.hm_FrameWork.view.HemaWebView
                android:id="@+id/webview_aboutwe"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom">
        <TextView
            android:id="@+id/share_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_height="wrap_content"
            android:drawableTop="@mipmap/share_img"
            android:text="分享"
            android:textColor="#2F2F2F"
            android:textSize="@dimen/textsize_7"/>

        <TextView
            android:id="@+id/goto_apliy"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:text="立即购买"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_7"
            android:background="@color/title_backgroid"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>