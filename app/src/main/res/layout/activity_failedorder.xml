<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_back"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/title_backgroid"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="原因:"
                    android:textColor="#7b7b7b"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消订单的原因"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/shenhui"
                    android:textSize="14sp"/>

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:src="@color/xian"
                android:contentDescription="@string/contentdescription"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#262626"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@id/textview_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退款积分："
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@id/textview_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="通过时间："
                    android:textColor="#7b7b7b"
                    android:textSize="15sp"/>

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:src="@color/xian"
                android:contentDescription="@string/contentdescription"/>

            <LinearLayout
                android:id="@id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="商家反馈:"
                    android:textColor="#7b7b7b"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@id/textview_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="商家反馈的原因"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/shenhui"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:src="@color/title_backgroid"
                    android:contentDescription="@string/contentdescription"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:src="@color/xian"
                android:contentDescription="@string/contentdescription"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="商家名称"

                    android:textColor="@color/shenhui"
                    android:textSize="14sp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:layout_marginLeft="12dp"
                    android:src="@color/xian"
                    android:contentDescription="@string/contentdescription"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:background="#f8f8f8">

                    <ImageView
                        android:id="@id/imageview"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/hotel_defult_img"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="13dp"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/contentdescription"/>

                    <TextView
                        android:id="@id/textview_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imageview"
                        android:layout_marginTop="12dp"
                        android:layout_marginRight="15dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="商品名称"
                        android:textColor="@color/shenhui"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@id/textview_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imageview"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="5dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_below="@id/textview_3"
                        android:text="商品规格"
                        android:textColor="#a0a0a0"
                        android:textSize="14sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentBottom="true"
                        android:gravity="center_vertical"
                        android:layout_toRightOf="@id/imageview"
                        android:layout_below="@id/textview_3">

                        <TextView
                            android:id="@id/textview_5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="兑换金积分"
                            android:textColor="#f10215"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@id/textview_6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:paddingBottom="5dp"
                            android:text="256"
                            android:textColor="#f10215"
                            android:textSize="18sp"/>

                        <TextView
                            android:id="@id/textview_7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:paddingBottom="5dp"
                            android:text="积分"
                            android:textColor="#f10215"
                            android:textSize="14sp"/>

                    </LinearLayout>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.8dp"
                    android:src="@color/xian"
                    android:contentDescription="@string/contentdescription"/>

                <!--商品的总数量和总价格-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="#f6f7f7">

                    <TextView
                        android:id="@id/textview_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/textview_9"
                        android:text="共0份"
                        android:textColor="@color/shenhui"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@id/textview_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/textview_10"
                        android:layout_marginRight="5dp"
                        android:text="合计："
                        android:textColor="@color/shenhui"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@id/textview_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="0积分"
                        android:textColor="@color/shenhui"
                        android:textSize="16sp"/>
                </RelativeLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/xian"
                android:contentDescription="@string/contentdescription"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:src="@color/xian"
                android:contentDescription="@string/contentdescription"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="商品总计"
                        android:textSize="@dimen/textsize_7" />

                    <TextView
                        android:id="@+id/price_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500积分"
                        android:textSize="@dimen/textsize_7" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="运费"
                        android:textSize="@dimen/textsize_7" />

                    <TextView
                        android:id="@+id/price_freight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0积分"
                        android:textSize="@dimen/textsize_7" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="实付(含运费)"
                        android:textSize="@dimen/textsize_7" />

                    <TextView
                        android:id="@+id/price_real"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500积分"
                        android:textSize="@dimen/textsize_7" />
                </LinearLayout>

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/xian"
                android:layout_marginBottom="30dp"
                android:contentDescription="@string/contentdescription"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
