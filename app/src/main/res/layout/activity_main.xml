<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/father"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F7"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DADADA"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8F8F8"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radiobutton0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/main_bg_button"
                android:checked="true"
                android:drawablePadding="2dp"
                android:button="@null"
                android:drawableTop="@drawable/main_select_1"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="首页"
                android:textColor="@drawable/main_text_cehck"
                android:textSize="@dimen/textsize_7"
                />
            <!---->
            <!--android:button="@drawable/main_bg_button"-->
            <RadioButton
                android:id="@+id/radiobutton1"
                android:layout_width="0dp"
                android:background="@drawable/main_bg_button"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/main_select_2"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="分类"
                android:button="@null"
                android:textColor="@drawable/main_text_cehck"
                android:textSize="@dimen/textsize_7"
                />

            <RadioButton
                android:id="@+id/radiobutton2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/main_select_3"
                android:button="@null"
                android:background="@drawable/main_bg_button"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="购物车"
                android:textColor="@drawable/main_text_cehck"
                android:textSize="@dimen/textsize_7"
                />

            <RadioButton
                android:id="@+id/radiobutton3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="2dp"
                android:drawableTop="@drawable/main_select_4"
                android:gravity="center"
                android:button="@null"
                android:background="@drawable/main_bg_button"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="我的"
                android:textColor="@drawable/main_text_cehck"
                android:textSize="@dimen/textsize_7"
                />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:visibility="gone">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/main_point"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="30dp"

                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textsize_5"
                    />
            </RelativeLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>