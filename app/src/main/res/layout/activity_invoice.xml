<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9ECEB"
    android:orientation="vertical">

    <include layout="@layout/title_right_text"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/title_backgroid"></View>
        <RadioGroup
            android:id="@+id/select_no_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:background="@color/white"
            android:paddingTop="20dp"
            android:gravity="center">
            <RadioButton
                android:id="@+id/putong"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_select_fapiao"
                android:paddingTop="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textSize="@dimen/textsize_8"
                android:checked="true"
                android:textColor="@drawable/fapiao_text"
                android:button="@null"
                android:text="普通发票"
                android:layout_marginRight="30dp"/>
            <RadioButton
                android:id="@+id/no_putong"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_select_fapiao"
                android:paddingTop="5dp"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginLeft="30dp"
                android:textSize="@dimen/textsize_8"
                android:textColor="@drawable/fapiao_text"
                android:button="@null"
                android:text="不需要"/>
        </RadioGroup>
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#E9ECEB"></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="@dimen/textsize_8"
            android:textColor="#2F2F2F"
            android:background="#F6F7F7"
            android:text="发票抬头"/>
        <RadioGroup
            android:id="@+id/people_or_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:background="@color/white"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:gravity="center|left">
            <RadioButton
                android:id="@+id/people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:paddingTop="10dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="30dp"
                android:textSize="@dimen/textsize_8"
                android:checked="true"
                android:button="@drawable/fapiao_select_company"
                android:text="个人"
                />
            <RadioButton
                android:id="@+id/company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="30dp"
                android:textSize="@dimen/textsize_8"
                android:button="@drawable/fapiao_select_company"
                android:text="公司"/>
        </RadioGroup>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:background="#E3E3E3"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:background="@color/white">
            <EditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F1F2F6"
                android:padding="10dp"
                android:textSize="@dimen/textsize_7"
                android:hint="请输入姓名"
                android:singleLine="true"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F1F2F6"></View>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="@dimen/textsize_8"
            android:textColor="#2F2F2F"
            android:background="#F6F7F7"
            android:text="发票内容"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:background="@color/white">
            <EditText
                android:id="@+id/input_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F1F2F6"
                android:padding="10dp"
                android:textSize="@dimen/textsize_7"
                android:hint="请输入发票内容"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>